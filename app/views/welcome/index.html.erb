<script type = "text/javascript">
function checkResult(){
   hideImages()
 var num1=  document.getElementById('num1').getAttribute('value');
 var num2 = document.getElementById('num2').getAttribute('value');
 var actualRes = document.getElementById('result').value;
 var expectedRes = +num1 + +num2;
 if(actualRes == expectedRes){
     clearRightImage()
     setTimeout(function(){
         location.reload();
     }, 3000);
 }
 else {
    clearWrongImage()
 }

}

function clearWrongImage(){
    document.getElementById('wrong').removeAttribute("hidden");
}
function clearRightImage(){
    document.getElementById('right').removeAttribute("hidden");
}
function hideImages() {
    document.getElementById('wrong').setAttribute("hidden", true);
    document.getElementById('right').setAttribute("hidden", true);
}

</script>

<div class="square element1" id="num1" value="<%= @random1 %>" ><%= @random1 %></div>
  <div class="mather element1" id="oper" value="+">+</div>
<div class="square element1" id="num2" value="<%= @random2 %>"><%= @random2 %></div>
<div class="mather element1" id="equal">=</div>
<p>
<input class="answer element1" id="result" onclick="this.value=''" value=""/>

<button id="button" class="button" value="Check" onclick="checkResult()">Check</button>
  <img src="/assets/correct.png" height="200" width="200" id="right" hidden/>
  <img src="/assets/wrong.png"  height="200" width="200"  id="wrong" hidden/>

</p>